<resources>

    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="autoCompleteTextViewStyle">@style/SearchItemLight</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonLight</item>
    </style>

    <style name="FloatingActionButtonLight" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="SearchItemLight" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">@color/white</item>
    </style>
</resources>
